{% extends '@SyliusShop/shared/layout/base.html.twig' %}

{% block title %}{{ product.name }} | {{ parent() }}{% endblock %}

{% block content %}
    <div class="container mt-4 mb-5">
        {% hook 'sylius_shop.product.show.page' with { product, configuration } %}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {# Load the /build/app/shop/app-shop-product-show.js file on the product page. #}
    {{ encore_entry_script_tags('app-shop-product-show', null, 'app.shop') }}
{% endblock %}
